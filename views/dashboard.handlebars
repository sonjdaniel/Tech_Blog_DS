<div class="mx-2 mb-3">
  <h2 class="fs-4">My Dashboard</h2>
</div>

<div class="d-flex flex-column justify-content-center">
  {{#each (reverse posts) as |post|}}
    <section class="card m-2 border border-1 border-info">
      <a href="/update/post/{{id}}">
        <div
          class="d-flex justify-content-between title-bar px-2 align-items-center"
        >
          <h2 class="fs-5">{{title}}</h2>
          <p class="fs-6 fst-italic fw-lighter">{{date_created}}</p>
        </div>
      </a>
    </section>
  {{/each}}
  <div class="my-2 d-flex justify-content-center">
    <a href="/new-post"><button class="btn btn-primary">New Post</button></a>
  </div>
</div>