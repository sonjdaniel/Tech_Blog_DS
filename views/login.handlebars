{{!-- login URL --}}
<nav>
    <a href="/">Home</a>
    {{#if loggedIn}}
        <button id="logout">Logout</button>
    {{/if}}
</nav>
<main class="container container-fluid mt-5">
    <div class="row justify-space-between-md">
        <div class="login-card col-5">
            <h2 class="page-title">Login</h2>
                <form class="form login-form" id="login-form">
                    <div class="form-group">
                        <label for="email-login">Email:</label>
                            <input class="form-input signup-fields" type="text" id="email-login" />
                    </div>
                    <div class="form-group">
                        <label for="password-login">Password:</label>
                        <input class="form-input signup-fields" type="password" id="password-login" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                </form>
        </div>
        <div class="login-card col-5">
            <h2 class="page-title">Sign Up</h2>
                <form class="form signup-form" id="signup-form">
                    <div class="form-group">
                        <label for="username-signup">Username:</label>
                            <input class="form-input signup-fields" type="text" id="username-signup" />
                    </div>
                    <div class="form-group">
                        <label for="email-signup">Email:</label>
                            <input class="form-input signup-fields" type="text" id="email-signup" />
                    </div>
                    <div class="form-group">
                        <label for="password-signup">Password:</label>
                        <input class="form-input signup-fields" type="password" id="password-signup" />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Signup</button>
                    </div>
                </form>
        </div>
        <div>
            <p class="page-title instruction" id="resultHeader"></p>
                {{#if loggedIn}}
                    <p class="instruction" id="resultText">Logged in as {{username}}</p>
                {{else}}
                    <p class="instruction" id="resultText">Login or create new user to proceed</p>
                {{/if}}
        </div>
    </div>
    <script src="./js/login.js"></script>
</main>
{{#if loggedIn}}
    <script src="./js/logout.js"></script>
{{/if}}