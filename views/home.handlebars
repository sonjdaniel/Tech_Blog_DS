{{!-- home page URL that displays all posts by all users --}}
<nav>
    {{#if loggedIn}}
        <a href="/dashboard">Dashboard</a>
        <button id="logout">Logout</button>
    {{else}}
        <a href="/login">Login</a>
    {{/if}}
</nav>
<main class="container container-fluid mt-5">
    <div class="column justify-space-around">
        {{#if loggedIn}}
            <p class="returnLink">Logged in as {{username}}</p>
        {{else}}
            <a href="/login" class="returnLink">You must log in to post</a>
        {{/if}}
        {{#each posts as |post|}}
            {{>post-details}}
        {{/each}}
    </div>
</main>
{{#if loggedIn}}
<script src="./js/logout.js"></script>
{{/if}}